<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/backgr"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include
        android:id="@+id/app_bar"
        layout="@layout/app_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <com.jaredrummler.materialspinner.MaterialSpinner
        android:id="@+id/spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="70dp"
        android:layout_marginEnd="20dp"
        android:textSize="14dp"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:ms_arrow_tint="?android:attr/textColorHint"
        app:ms_padding_left="20dp"
        app:ms_text_color="?android:attr/textColorHint"
        tools:text="Example" />

    <com.remember.app.customView.CustomEditTextFrame
        android:id="@+id/body"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="65dp"
        android:textSize="25dp"
        app:hint="@string/questions_textarea_hint_text"
        app:layout_constraintTop_toBottomOf="@+id/spinner"
        app:textColor="@color/dark_gray"
        app:textColorHighlight="@color/dark_gray"
        app:textColorHint="@color/gray"
        app:textColorLink="@color/colorPrimary"
        tools:ignore="RtlSymmetry"
        tools:layout_editor_absoluteX="20dp" />

    <com.remember.app.customView.CustomButton
        android:id="@+id/pick"
        style="@style/CustomAppButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_margin="20dp"
        android:background="@drawable/button"
        android:text="@string/send"
        android:textSize="25dp"
        app:layout_constraintTop_toBottomOf="@+id/body"
        tools:layout_editor_absoluteX="20dp" />

</androidx.constraintlayout.widget.ConstraintLayout>