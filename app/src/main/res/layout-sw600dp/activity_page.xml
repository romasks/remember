<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">



    <include
        android:id="@+id/app_bar"
        layout="@layout/app_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constrainedHeight="true"
        app:layout_constraintBottom_toTopOf="@id/bottom_navbar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/app_bar">

        <ScrollView
            android:id="@+id/scrollView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp">

            <LinearLayout
                android:id="@+id/mainLinLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <FrameLayout
                    android:id="@+id/avatar"
                    android:layout_width="match_parent"
                    android:layout_height="350dp"
                    android:orientation="horizontal"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center">

                        <ImageView
                            android:id="@+id/sharedImage"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            tools:ignore="ContentDescription" />

                        <ImageView
                            android:id="@+id/image"
                            android:layout_width="match_parent"
                            android:layout_height="400dp"
                            android:layout_centerInParent="true"
                            tools:ignore="ContentDescription"
                            tools:src="@drawable/no_photo" />
                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:layout_gravity="bottom"
                        android:background="@drawable/gradient" />

                </FrameLayout>

                <com.remember.app.customView.CustomTextView
                    android:id="@+id/fio"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="15dp"
                    android:gravity="center_horizontal"
                    android:text="-"
                    android:textColor="@color/brown"
                    android:textSize="31dp"
                    android:textStyle="bold"
                    tools:text="Фамилия Имя Отчество" />

                <com.remember.app.customView.CustomTextView
                    android:id="@+id/dates"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="-"
                    android:textColor="@color/gray"
                    android:textSize="21dp"
                    tools:text="13.07.1952 - 28.01.2017" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:baselineAligned="false"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <LinearLayout
                        android:id="@+id/addPhotoToSliderBtn_layout"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="0.85"
                        android:gravity="center_vertical">

                        <ImageButton
                            android:id="@+id/addPhotoToSliderBtn"
                            android:layout_width="65dp"
                            android:layout_height="65dp"
                            android:layout_marginStart="12dp"
                            android:background="@drawable/ic_plus"
                            tools:ignore="ContentDescription" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="0.15">

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/recyclerSlider"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                            tools:itemCount="3"
                            tools:listitem="@layout/slider_photo" />

                    </LinearLayout>

                </LinearLayout>

                <com.remember.app.customView.CustomTextView
                    android:id="@+id/textView9"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="17dp"
                    android:paddingBottom="8dp"
                    android:text="@string/memory_page_burial_place_title"
                    android:textColor="#917b5a"
                    android:textSize="25dp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:id="@+id/panel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp"
                    android:background="@drawable/panel_white"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="237dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="15dp"
                        android:layout_marginBottom="7dp"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">

                        <com.remember.app.customView.CustomTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="7dp"
                            android:layout_weight="1"
                            android:singleLine="true"
                            android:text="@string/city"
                            android:textAlignment="center"
                            android:textColor="@color/gray"
                            android:textSize="21dp" />

                        <com.remember.app.customView.CustomTextView
                            android:id="@+id/city"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="12dp"
                            android:layout_weight="1"
                            android:text="-"
                            android:textColor="@color/gray"
                            android:textSize="21dp"
                            android:textStyle="bold"
                            tools:text="Минск" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="15dp"
                        android:layout_marginEnd="20dp"
                        android:baselineAligned="false"
                        android:gravity="center_horizontal"
                        android:orientation="horizontal"
                        android:weightSum="3">

                        <LinearLayout
                            android:layout_width="100dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="1"
                            android:gravity="center_horizontal"
                            android:orientation="vertical"
                            android:textAlignment="center"
                            android:weightSum="2">

                            <com.remember.app.customView.CustomTextView
                                android:id="@+id/sector"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:layout_weight="1"
                                android:maxLines="2"
                                android:text="@string/memory_page_sector_text"
                                android:textColor="@color/gray"
                                android:textSize="21dp" />

                            <com.remember.app.customView.CustomTextView
                                android:id="@+id/sector"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_weight="1"
                                android:paddingTop="14dp"
                                android:text="-"
                                android:textColor="@color/gray"
                                android:textSize="21dp"
                                android:textStyle="bold"
                                tools:text="6" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="100dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="1"
                            android:gravity="center_horizontal"
                            android:orientation="vertical"
                            android:textAlignment="center"
                            android:weightSum="2">

                            <com.remember.app.customView.CustomTextView
                                android:id="@+id/line"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:layout_weight="1"
                                android:maxLines="2"
                                android:text="@string/memory_page_row_text"
                                android:textColor="@color/gray"
                                android:textSize="21dp" />

                            <com.remember.app.customView.CustomTextView
                                android:id="@+id/line"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_weight="1"
                                android:paddingTop="14dp"
                                android:text="-"
                                android:textColor="@color/gray"
                                android:textSize="21dp"
                                android:textStyle="bold"
                                tools:text="12" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="100dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:weightSum="2">

                            <com.remember.app.customView.CustomTextView
                                android:id="@+id/grave"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginTop="8dp"
                                android:layout_weight="1"
                                android:text="@string/grave_number"
                                android:textAlignment="center"
                                android:textColor="@color/gray"
                                android:textSize="21dp" />

                            <com.remember.app.customView.CustomTextView
                                android:id="@+id/grave"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_weight="1"
                                android:paddingTop="14dp"
                                android:text="-"
                                android:textColor="@color/gray"
                                android:textSize="21dp"
                                android:textStyle="bold"
                                tools:text="325" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">

                        <com.remember.app.customView.CustomTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="8dp"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:text="@string/cemetery"
                            android:textColor="@color/gray"
                            android:textSize="21dp" />

                        <com.remember.app.customView.CustomTextView
                            android:id="@+id/crypt"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center|center_vertical"
                            android:layout_marginTop="15dp"
                            android:layout_weight="1"
                            android:lines="2"
                            android:maxLines="3"
                            android:text="-"
                            android:textAlignment="center"
                            android:textColor="@color/gray"
                            android:textSize="21dp"
                            android:textStyle="bold"
                            tools:text="Название кладбища" />

                        <com.remember.app.customView.CustomTextView
                            android:id="@+id/descriptionTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:paddingBottom="7dp"
                            android:text="@string/memory_page_show_description_text"
                            android:textColor="@color/colorAccent"
                            android:textSize="25dp" />



                    </LinearLayout>


                </LinearLayout>
                <com.remember.app.customView.CustomTextView
                    android:id="@+id/description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_weight="1"
                    android:gravity="center|center_vertical"
                    android:text="йцуййцуйцуйцу"
                    android:textColor="?android:attr/textColor"
                    android:textSize="21dp"
                    android:visibility="gone"
                    tools:text="asfas sfasf sfasf safas asfasf fsafasfsa as" />

                <com.remember.app.customView.CustomButton
                    android:id="@+id/mapButton"
                    android:layout_width="match_parent"
                    android:layout_height="65dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="5dp"
                    android:background="@drawable/button"
                    android:text="@string/memory_page_button_show_on_map"
                    android:textAllCaps="false"
                    android:textColor="@android:color/white"
                    android:textSize="25dp" />

                <LinearLayout
                    android:id="@+id/share_LinLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:layout_marginBottom="40dp"
                    android:orientation="horizontal">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/shareVk"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        app:srcCompat="@mipmap/ic_vk" />

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/shareFb"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        app:srcCompat="@mipmap/ic_fc" />




                </LinearLayout>


            </LinearLayout>
        </ScrollView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/bottom_navbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:layout_margin="2dp"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/epitButton"
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                app:srcCompat="@drawable/ic_candle"
                tools:ignore="ContentDescription" />

            <ImageButton
                android:paddingTop="5dp"
                android:id="@+id/biography"
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:visibility="gone"
                android:scaleType="center"
                android:layout_gravity="center_horizontal"
                android:background="@android:color/transparent"
                app:srcCompat="@drawable/ic_3"
                tools:ignore="ContentDescription" />

            <ImageButton
                android:id="@+id/eventsButton"
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_gravity="end"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                app:srcCompat="@drawable/ic_calendar"
                tools:ignore="ContentDescription" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            >

            <com.remember.app.customView.CustomTextView
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:text="@string/memory_page_bottom_navbar_epitaphs"
                android:textAlignment="center"
                android:textColor="@color/gray"
                android:textSize="21dp" />

            <com.remember.app.customView.CustomTextView
                android:id="@id/tvBiography"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:text="Биография"
                android:visibility="gone"
                android:textAlignment="center"
                android:textColor="@color/gray"
                android:textSize="21dp" />

            <com.remember.app.customView.CustomTextView
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:paddingEnd="4dp"
                android:text="@string/memory_page_bottom_navbar_events"
                android:textAlignment="center"
                android:textColor="@color/gray"
                android:textSize="21dp"
                tools:ignore="RtlSymmetry" />
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>